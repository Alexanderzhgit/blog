<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item <%= 'active' if current_page?(root_path) || current_page?(posts_path) %>">
              <a class="nav-link" href="<%= root_path %>">Все проекты</a>
            </li>
          </ul>

          <ul class="navbar-nav pull-xs-right">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Выход", destroy_user_session_path, method: :delete, class: "nav-link" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Вход", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Регистрация", new_user_registration_path, class: "nav-link" %>
              </li>
            <% end %>
           
          </ul>
        </div>
      </nav>
    </div>

	<div class="container main">
	<div class="row">
		<div class="col-md-12">
			<% flash.each do |name, message| %>
			<div class="alert <%= bootstrap_class_for(name) %>">
			<button class="close" data-dismiss="alert">&times;</button>
				<%= message %>
			</div>
			<% end %>
		</div>
	</div>
    <%= yield %>
	</div>

  </body>
</html>
